  },
  "devDependencies": {
    "@elba-security/tsconfig": "workspace:*",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.53.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.0.3",
    "turbo": "latest"
  },
  "engines": {
    "node": "20",
    "pnpm": "8"
  },
  "name": "elba-security",
  "packageManager": "pnpm@8.10.2",
  "lint-staged": {
    "!(template/**/*)*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,json,css,md}": "prettier --write"
  }
